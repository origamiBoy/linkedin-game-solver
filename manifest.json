{
  "manifest_version": 3,
  "name": "LinkedIn Game Solver",
  "version": "1.0",
  "description": "Solves LinkedIn Games puzzles",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/games/view/queens/desktop/*", "https://www.linkedin.com/games/queens/*"],
      "js": ["browser_queens.js"]
    },
    {
      "matches": ["https://www.linkedin.com/games/view/zip/desktop/*", "https://www.linkedin.com/games/zip/*"],
      "js": ["browser_zip.js"]
    },
    {
      "matches": ["https://www.linkedin.com/games/view/tango/desktop/*", "https://www.linkedin.com/games/tango/*"],
      "js": ["browser_tango.js"]
    },
    {
      "matches": ["https://www.linkedin.com/games/view/pinpoint/desktop/*", "https://www.linkedin.com/games/pinpoint/*"],
      "js": ["browser_pinpoint.js"]
    },
    {
      "matches": ["https://www.linkedin.com/games/view/crossclimb/desktop/*", "https://www.linkedin.com/games/crossclimb/*"],
      "js": ["browser_crossclimb.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 